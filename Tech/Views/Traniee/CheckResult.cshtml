@model Tech.ModelView.TraineeViewModel
@{
    ViewData["Title"] = "CheckResult";
}

<h1>Result Details</h1>

<table class="table table-bordered">
    <tr>
        <th>Trainee Name</th>
        <td>@Model.TraineeName</td>
    </tr>
    <tr>
        <th>Course Name</th>
        <td>@Model.CourseName</td>
    </tr>

    <tr style="background-color:@Model.StatusColor; color: white;">
        <th>Degree</th>
        <td>@Model.Degree</td>
    </tr>
    <tr style="background-color:@Model.StatusColor; color: white;">
        <th>Min Degree</th>
        <td>@Model.MinDegree</td>
    </tr>
    <tr style="background-color:@Model.StatusColor; color: white;">
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
</table>