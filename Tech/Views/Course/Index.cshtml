@model List<Course>
@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/_MYAddLayout.cshtml";
    // 
}

<h1>Courses List</h1>

<form method="get" asp-action="Index" asp-controller="Course" class="mb-3">
    <input type="text" name="searchName" class="form-control" placeholder="Search by course name"
           value="@ViewBag.SearchName" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<a asp-action="Add" asp-controller="Course" class="btn btn-primary mb-3">Add New Course</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Hours</th>
            <th>Department Name</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.MinDegree</td>
                <td>@course.Hours</td>
                @* <td>@course.DeptId</td> *@
                <td>@course.Department?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
